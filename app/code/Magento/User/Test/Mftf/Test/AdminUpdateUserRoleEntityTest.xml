<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminUpdateUserRoleEntityTest">
        <annotations>
            <features value="User"/>
            <stories value="Update User Role"/>
            <title value="Updating the created role according different data sets"/>
            <description value="Updating the created role according to different data sets"/>
            <group value="user"/>
            <group value="mtf_migrated"/>
        </annotations>

        <before>
            <executeJS function="return '{{DefaultAdminUser.password}}'" stepKey="adminPassword" />
            <createData entity="NewAdminUser" stepKey="user">
                <field key="current_password">{$adminPassword}</field>
            </createData>
            <createData entity="roleAdmin" stepKey="user_role">
                <field key="current_password">{$adminPassword}</field>
            </createData>
            <actionGroup ref="LoginAsAdmin" stepKey="logIn"/>
        </before>

        <after>
            <actionGroup ref="logout" stepKey="logOut"/>
        </after>

       <!--Assign new role-->
        <actionGroup ref="AdminOpenUserEditPageActionGroup" stepKey="openUserEditPage">
            <argument name="user" value="$$user$$"/>
        </actionGroup>
        <actionGroup ref="AdminUpdateUserRoleActionGroup" stepKey="assignNewUserRole">
            <argument name="roleName" value="$$user_role.rolename$$"/>
        </actionGroup>
        <actionGroup ref="AdminClickSaveButtonOnUserFormActionGroup" stepKey="saveUser"/>

        <!--LogIn as admin user with new role-->
        <actionGroup ref="logout" stepKey="logOutAsDefaultAdminUser"/>
        <actionGroup ref="LoginAsAdmin" stepKey="loginAsNewUser">
            <argument name="adminUser" value="$$user$$"/>
        </actionGroup>

        <!--Update the role name-->
        <actionGroup ref="AdminOpenRoleEditPageActionGroup" stepKey="openRoleEditPage">
            <argument name="roleName" value="$$user_role.rolename$$"/>
        </actionGroup>
        <actionGroup ref="AdminUpdateRoleNameActionGroup" stepKey="enterNewRoleName">
            <argument name="roleName" value="{{roleAdministrator.name}}"/>
            <argument name="currentAdminPassword" value="$$user.password$$"/>
        </actionGroup>
        <actionGroup ref="AdminClickSaveButtonOnUserRoleFormActionGroup" stepKey="saveNewRoleName"/>
        <actionGroup ref="AssertMessageInAdminPanelActionGroup" stepKey="assertSuccessMessageForSave">
            <argument name="message" value="You saved the role."/>
        </actionGroup>
        <actionGroup ref="AssertAdminRoleInGridActionGroup" stepKey="assertNewRoleNameInGrid">
            <argument name="roleName" value="{{roleAdministrator.name}}"/>
        </actionGroup>
        <actionGroup ref="logout" stepKey="logOutSecondTime"/>
        <actionGroup ref="LoginAsAdmin" stepKey="logInThirdTime">
            <argument name="adminUser" value="$$user$$"/>
        </actionGroup>
        <actionGroup ref="AssertAdminSuccessLoginActionGroup" stepKey="seeSuccessLoginMessage"/>

        <!--Update the role resource access-->
        <actionGroup ref="AdminOpenRoleEditPageActionGroup" stepKey="openRoleEditPageSecondTime">
            <argument name="roleName" value="{{roleAdministrator.name}}"/>
        </actionGroup>
        <actionGroup ref="AdminFillUserRoleFormActionGroup" stepKey="setFullResourceAccess">
            <argument name="role" value="roleAdministrator"/>
            <argument name="currentAdminPassword" value="$$user.password$$"/>
        </actionGroup>
        <actionGroup ref="AdminClickSaveButtonOnUserRoleFormActionGroup" stepKey="saveFullResourceAccess"/>
        <actionGroup ref="AdminOpenRoleEditPageActionGroup" stepKey="openRoleEditPageToSetCustomAccess">
            <argument name="roleName" value="{{roleAdministrator.name}}"/>
        </actionGroup>
        <actionGroup ref="AdminFillUserRoleFormActionGroup" stepKey="selectNewResourceAccess">
            <argument name="role" value="roleSales"/>
            <argument name="currentAdminPassword" value="$$user.password$$"/>
        </actionGroup>
        <actionGroup ref="AdminClickSaveButtonOnUserRoleFormActionGroup" stepKey="saveNewResourceAccess"/>
        <actionGroup ref="AssertMessageInAdminPanelActionGroup" stepKey="assertSuccessMessage">
            <argument name="message" value="You saved the role."/>
        </actionGroup>
        <actionGroup ref="AssertAdminRoleInGridActionGroup" stepKey="assertRoleInGrid">
            <argument name="roleName" value="{{roleSales.name}}"/>
        </actionGroup>
        <actionGroup ref="logout" stepKey="logOutThirdTime"/>
        <actionGroup ref="LoginAsAdmin" stepKey="logInFourthTime">
            <argument name="adminUser" value="$$user$$"/>
        </actionGroup>
        <actionGroup ref="AssertAdminSuccessLoginActionGroup" stepKey="seeSuccessLoginMessageSecondTime"/>
        <actionGroup ref="AdminOpenProductIndexPageActionGroup" stepKey="goToProductsPage"/>
        <actionGroup ref="AssertAdminUserRoleRestrictedAccessActionGroup" stepKey="assertAccessDeniedMessage"/>

        <!--Update the role name using a wrong current admin password-->
        <actionGroup ref="AdminOpenRoleEditPageActionGroup" stepKey="openRoleEditPageThirdTime">
            <argument name="roleName" value="{{roleSales.name}}"/>
        </actionGroup>
        <actionGroup ref="AdminUpdateRoleNameActionGroup" stepKey="enterNewRoleNameThirdTime">
            <argument name="roleName" value="{{adminRole.name}}"/>
            <argument name="currentAdminPassword" value="{{_ENV.MAGENTO_ADMIN_PASSWORD}}INVALID"/>
        </actionGroup>
        <actionGroup ref="AdminClickSaveButtonOnUserRoleFormActionGroup" stepKey="saveNewRoleNameThirdTime"/>
        <actionGroup ref="AssertMessageInAdminPanelActionGroup" stepKey="assertErrorMessage">
            <argument name="messageType" value="error"/>
            <argument name="message" value="The password entered for the current user is invalid. Verify the password and try again."/>
        </actionGroup>

        <!--Delete new User-->
        <actionGroup ref="logout" stepKey="logOutAsNewAdminUser"/>
        <actionGroup ref="LoginAsAdmin" stepKey="loginAsDefaultAdminUser"/>
        <actionGroup ref="AdminDeleteUserViaCurlActionGroup" stepKey="deleteUser">
            <argument name="user" value="$$user$$" />
        </actionGroup>

        <!--Delete new Role-->
        <actionGroup ref="AdminDeleteUserRoleActionGroup" stepKey="deleteCustomRole">
            <argument name="roleName" value="{{roleSales.name}}"/>
        </actionGroup>

    </test>
</tests>
