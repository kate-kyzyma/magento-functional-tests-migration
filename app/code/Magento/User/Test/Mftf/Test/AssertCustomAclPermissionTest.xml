<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AssertCustomAclPermissionTest">
        <annotations>
            <features value="User"/>
            <stories value="Create custom admin user with custom role"/>
            <title value="Change full access role for admin user to custom one and assert restricted access"/>
            <description value="Change full access role for admin user to custom one and assert restricted access"/>
            <group value="user"/>
            <group value="mtf_migrated"/>
        </annotations>

        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="logIn"/>
        </before>
        <after>
            <actionGroup ref="logout" stepKey="logOut"/>
        </after>

        <!--Create new role-->
        <actionGroup ref="AdminOpenCreateRolePageActionGroup" stepKey="goToNewRolePage"/>
        <actionGroup ref="AdminFillUserRoleFormActionGroup" stepKey="fillNewRoleForm">
            <argument name="role" value="roleSales"/>
        </actionGroup>
        <actionGroup ref="AdminClickSaveButtonOnUserRoleFormActionGroup" stepKey="saveNewRole"/>

        <!--Create new user-->
        <actionGroup ref="AdminCreateUserActionGroup" stepKey="createNewAdminUser">
            <argument name="role" value="roleSales"/>
            <argument name="User" value="admin2"/>
        </actionGroup>

        <!--Login as newly created user-->
        <actionGroup ref="logout" stepKey="logoutAsDefaultUser"/>
        <actionGroup ref="LoginAsAdmin" stepKey="loginAsNewUser">
            <argument name="adminUser" value="admin2"/>
        </actionGroup>

        <!--Assert Custom Restricted Access-->
        <actionGroup ref="AdminOpenProductIndexPageActionGroup" stepKey="navigateToProductsGrid"/>
        <actionGroup ref="AssertUserRoleRestrictedAccessActionGroup" stepKey="seeErrorMessage"/>

        <!--Login as default admin user-->
        <actionGroup ref="logout" stepKey="logoutAsSaleRoleUser"/>
        <actionGroup ref="LoginAsAdmin" stepKey="loginAsDefaultAdminUser"/>

        <!--Delete new User-->
        <actionGroup ref="AdminDeleteCustomUserActionGroup" stepKey="deleteNewUser">
            <argument name="user" value="admin2"/>
        </actionGroup>

        <!--Delete new Role-->
        <actionGroup ref="AdminDeleteUserRoleActionGroup" stepKey="deleteCustomRole">
            <argument name="roleName" value="{{roleSales.name}}"/>
        </actionGroup>

    </test>
</tests>
