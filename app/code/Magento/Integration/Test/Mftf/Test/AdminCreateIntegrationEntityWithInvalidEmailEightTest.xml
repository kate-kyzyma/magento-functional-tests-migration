<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminCreateIntegrationEntityWithInvalidEmailSevenTest">
        <annotations>
            <features value="Integration"/>
            <stories value="System Integration with invalid email eight variation"/>
            <title value="System Integration with invalid email eight variation"/>
            <description value="Admin Create Integration with invalid email"/>
            <group value="integration"/>
            <group value="mtf_migrated"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="login"/>
        </before>
        <after>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="AdminOpenNewIntegrationPageActionGroup" stepKey="navigateToNewIntegrationsPage"/>
        <actionGroup ref="AdminFillExtraFieldsForIntegrationFormActionGroup" stepKey="createNewIntegration">
            <argument name="name" value="{{defaultIntegrationData.name}}"/>
            <argument name="password" value="{{_ENV.MAGENTO_ADMIN_PASSWORD}}"/>
            <argument name="email" value="this is&quot;not\allowed@example.com"/>
            <argument name="endpoint" value="https://endpoint.com"/>
            <argument name="linkUrl" value="https://testlink.com"/>
        </actionGroup>
        <actionGroup ref="AdminSubmitNewIntegrationFormActionGroup" stepKey="submitTheForm"/>

        <!-- Assert Email Validation Error Generated -->
        <actionGroup ref="AssertAdminValidationErrorGeneratedActionGroup" stepKey="assertValidationErrorMessage">
            <argument name="message" value="Please enter a valid email address (Ex: johndoe@domain.com)."/>
            <argument name="messageType" value="email"/>
        </actionGroup>

        <!-- Assert Success Save Message Not Present -->
        <actionGroup ref="AssertAdminIntegrationSuccessSaveMessageNotPresentActionGroup" stepKey="dontSeeSuccessSaveMessage"/>

    </test>
</tests>
