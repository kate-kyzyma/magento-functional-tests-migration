<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminCreateIntegrationEntityWithSingleQuoteTest">
        <annotations>
            <features value="Integration"/>
            <stories value="System Integration with single quote entered"/>
            <title value="Admin system integration with single quote"/>
            <description value="Admin Create Integration with single quote"/>
            <group value="integration"/>
            <group value="mtf_migrated"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="login"/>
        </before>
        <after>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="AdminOpenNewIntegrationPageActionGroup" stepKey="navigateToNewIntegrationsPage"/>
        <actionGroup ref="AdminFillAllFieldsForIntegrationFormActionGroup" stepKey="createNewIntegration">
            <argument name="integration" value="IntegrationWithSingleQuote"/>
            <argument name="name" value="{{IntegrationWithSingleQuote.name}}"/>
            <argument name="password" value="{{_ENV.MAGENTO_ADMIN_PASSWORD}}"/>
        </actionGroup>
        <actionGroup ref="AdminSubmitNewIntegrationFormActionGroup" stepKey="submitTheForm"/>

        <!-- Assert Url Validation Error Generated -->
        <actionGroup ref="AssertAdminUrlValidationErrorGeneratedActionGroup" stepKey="assertValidationErrorMessage"/>

        <!-- Assert Success Save Message Not Present -->
        <actionGroup ref="AssertAdminIntegrationSuccessSaveMessageNotPresentActionGroup" stepKey="dontSeeSuccessSaveMessage"/>

    </test>
</tests>
