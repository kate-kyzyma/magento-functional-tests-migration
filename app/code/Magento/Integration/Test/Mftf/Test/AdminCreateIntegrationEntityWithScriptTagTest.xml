<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminCreateIntegrationEntityWithScriptTagTest">
        <annotations>
            <features value="Integration"/>
            <stories value="System Integration with script tag"/>
            <title value="Admin system integration with script tag"/>
            <description value="Admin Create Integration with script tag"/>
            <group value="integration"/>
            <group value="mtf_migrated"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="login"/>
        </before>
        <after>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <actionGroup ref="AdminOpenNewIntegrationPageActionGroup" stepKey="navigateToNewIntegrationsPage"/>
        <actionGroup ref="AdminFillExtraFieldsForIntegrationFormActionGroup" stepKey="createNewIntegration">
            <argument name="name" value="&lt;script&gt;alert(&apos;XSS-'{{defaultIntegrationData.name}}'&apos;)&lt;/script&gt;"/>
            <argument name="password" value="{{_ENV.MAGENTO_ADMIN_PASSWORD}}"/>
            <argument name="email" value="-"/>
            <argument name="endpoint" value="&lt;script&gt;alert(&apos;XSS&apos;)&lt;/script&gt;"/>
            <argument name="linkUrl" value="&lt;script&gt;alert(&apos;XSS&apos;)&lt;/script&gt;"/>
        </actionGroup>
        <actionGroup ref="AdminSubmitNewIntegrationFormActionGroup" stepKey="submitTheForm"/>

        <!-- Assert Url Validation Error Generated -->
        <actionGroup ref="AssertAdminValidationErrorGeneratedActionGroup" stepKey="assertValidationErrorMessage"/>

        <!-- Assert Success Save Message Not Present -->
        <actionGroup ref="AssertAdminIntegrationSuccessSaveMessageNotPresentActionGroup" stepKey="dontSeeSuccessSaveMessage"/>

    </test>
</tests>
