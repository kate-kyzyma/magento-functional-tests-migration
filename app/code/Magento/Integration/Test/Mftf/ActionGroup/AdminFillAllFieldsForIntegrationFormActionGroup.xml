<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminFillAllFieldsForIntegrationFormActionGroup">
        <arguments>
            <argument name="integration" type="entity"/>
        </arguments>
        <fillField stepKey="fillNameField" selector="{{AdminNewIntegrationSection.name}}" userInput="{{integration.name}}"/>
        <fillField stepKey="fillAdminPasswordField" selector="{{AdminNewIntegrationSection.password}}" userInput="{{integration.password}}"/>
        <fillField selector="{{AdminNewIntegrationSection.email}}" userInput="{{integration.email}}" stepKey="fillEmailField"/>
        <fillField selector="{{AdminNewIntegrationSection.endpoint}}" userInput="{{integration.endpoint}}" stepKey="fillCallbackURLField"/>
        <fillField selector="{{AdminNewIntegrationSection.linkUrl}}" userInput="{{integration.linkUrl}}" stepKey="fillIdentityLinkURLField"/>
        <click selector="{{AdminNewIntegrationFormSection.apiTab}}" stepKey="clickToOpenApiTab"/>
        <waitForPageLoad stepKey="waitForApiTab"/>
        <selectOption selector="{{AdminNewIntegrationFormSection.resourceAccess}}" userInput="{{integration.resourceAccess}}" stepKey="selectResourceAccess" />
        <performOn selector="{{AdminNewIntegrationFormSection.resourceTree}}" function="function($I,$apiResources={{integration.resources}}){foreach($apiResources as $apiResource){$I->conditionalClick('//li[@data-id=\'' . $apiResource . '\']//*[@class=\'jstree-checkbox\']','//li[@data-id=\'' . $apiResource . '\' and contains(@class, \'jstree-checked\')]',false);}}" stepKey="checkNeededResources"/>
    </actionGroup>
</actionGroups>
