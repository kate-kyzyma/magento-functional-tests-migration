<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminFillExtraFieldsForIntegrationFormActionGroup" extends="AdminCreatesNewIntegrationActionGroup">
        <arguments>
            <argument name="email" type="string" defaultValue=""/>
            <argument name="endpoint" type="string" defaultValue=""/>
            <argument name="linkUrl" type="string" defaultValue=""/>
            <argument name="resourceAccess" type="string" defaultValue="All"/>
        </arguments>
        <fillField selector="{{AdminNewIntegrationSection.email}}" userInput="{{email}}" stepKey="fillEmailField"/>
        <fillField selector="{{AdminNewIntegrationSection.endpoint}}" userInput="{{endpoint}}" stepKey="fillCallbackURLField"/>
        <fillField selector="{{AdminNewIntegrationSection.linkUrl}}" userInput="{{linkUrl}}" stepKey="fillIdentityLinkURLField"/>
        <click selector="{{AdminNewIntegrationFormSection.apiTab}}" stepKey="clickToOpenApiTab"/>
        <waitForPageLoad stepKey="waitForApiTab"/>
        <selectOption selector="{{AdminNewIntegrationFormSection.resourceAccess}}" userInput="{{resourceAccess}}" stepKey="selectResourceAccess" />
    </actionGroup>
</actionGroups>
